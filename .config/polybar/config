[module/uptime]
type = custom/script
interval = 2
format-prefix = "î€– "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #ffb52a
exec = uptime --pretty | sed 's/up //' | sed 's/\ years\?,/y/' | sed 's/\ weeks\?,/w/' | sed 's/\ days\?,/d/' | sed 's/\ hours\?,\?/h/' | sed 's/\ minutes\?/m/'

